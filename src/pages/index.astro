      <a class="cta-button" href={ctaLink} target="_blank">{ctaText}</a>
    </section>

    <footer>
      <p>Made with ‚ù§Ô∏è by Backblizzard</p>
    </footer>

    <script>
      const snowContainer = document.getElementById("snow");
      const snowflakes = ["‚ùÑÔ∏è"];

      function createSnowflake() {
        const flake = document.createElement("div");
        flake.className = "snowflake";
        flake.textContent = snowflakes[Math.floor(Math.random() * snowflakes.length)];

        // Limit to middle 50% of screen width
        const leftPos = 25 + Math.random() * 50; // from 25vw to 75vw
        flake.style.left = `${leftPos}vw`;

        const drift = (Math.random() - 0.5) * 100;
        flake.style.setProperty('--drift', `${drift}px`);
        flake.style.animationDuration = 10 + Math.random() * 10 + "s";
        flake.style.fontSize = 1 + Math.random() * 1.5 + "rem";

        snowContainer.appendChild(flake);
        setTimeout(() => flake.remove(), 25000);
      }

      setInterval(createSnowflake, 400);
    </script>
  </body>
</html>
