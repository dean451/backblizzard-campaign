    <script>
      const snowContainer = document.getElementById("snow");
      const snowflakes = ["‚ùÑÔ∏è", "‚ùÖ", "‚ùÜ", "üå®Ô∏è"];

      function createSnowflake() {
        const flake = document.createElement("div");
        flake.className = "snowflake";
        flake.textContent = snowflakes[Math.floor(Math.random() * snowflakes.length)];

        // Random horizontal position across full width
        const leftPos = Math.random() * 100;
        flake.style.left = `${leftPos}vw`;

        // Random horizontal drift
        const drift = (Math.random() - 0.5) * 200;
        flake.style.setProperty('--drift', `${drift}px`);
        
        // Random fall duration and size
        flake.style.animationDuration = (8 + Math.random() * 12) + "s";
        flake.style.fontSize = (1 + Math.random() * 1) + "rem";
        
        // Random opacity for depth
        flake.style.opacity = 0.4 + Math.random() * 0.6;

        snowContainer.appendChild(flake);
        
        // Remove snowflake after animation
        setTimeout(() => {
          if (flake.parentNode) {
            flake.remove();
          }
        }, 25000);
      }

      // Create initial burst of snowflakes
      for (let i = 0; i < 20; i++) {
        setTimeout(() => createSnowflake(), i * 200);
      }

      // Continue creating snowflakes
      setInterval(createSnowflake, 300);
    </script>
