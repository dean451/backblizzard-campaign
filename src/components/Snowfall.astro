---
const snowflakes = Array.from({ length: 20 }, () => ({
  left: Math.random() * 100,
  symbol: ["❄️", "❄️", "❄️"][Math.floor(Math.random() * 2)],
  duration: 4 + Math.random() * 6,
  drift: (Math.random() - 0.5) * 300 // -150px to +150px for stronger drift
}));
---
<style>
  #snow {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 9999;
    overflow: hidden;
  }

  .snowflake {
    position: absolute;
    top: 0;
    color: #fff;
    font-size: 2rem;
    user-select: none;
    opacity: 0.8;
    animation: fall linear infinite;
  }

  @keyframes fall {
    0% {
      top: 0;
      transform: translateX(0);
    }
    100% {
      top: 100vh;
      transform: translateX(var(--drift, 0));
    }
  }
</style>

<div id="snow">
  {snowflakes.map(flake => (
    <div class="snowflake" style={`left: ${flake.left}vw; animation-duration: ${flake.duration}s; --drift: ${flake.drift}px;`}>
      {flake.symbol}
    </div>
  ))}
</div>
